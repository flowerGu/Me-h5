	    <script>
	     var cust_id=getQueryString('cust_id');
            $(function(){
            	var dd=$(document).height();
 				$('body').css("minHeight",dd);//设置body的高度
                $('.share_a').click(function(){
                    $('.zhezhao').css("display","block");
                    $('.tip_share').css("display","block");
                    $('.arrows').css("display","block");
                })
                $('.zhezhao,.tip_share,.arrows').click(function(){
                    $('.zhezhao').css("display","none");
                    $('.tip_share').css("display","none");
                    $('.arrows').css("display","none");
                })
                pageload();
            })
            function pageload(){
//              var tokenid=getCookie("tokenid");
               
//              if(tokenid!=null){
                    $.ajax({
                        type:"post",
                        version:app_data.version,
                        url:MANAGERDETAILS_JSON_URL,
                        data:{cust_id:cust_id},
                        dataType:"json",
                        success:function(data){
                            if(data.code=="000")
                            {
                                var tel=data.phoneNumber;
                                tel=tel.substr(0,3)+'-'+tel.substr(3,4)+'-'+tel.substr(7);
                                
                                if(data.faceImageUrl!=null)
                                {
                                	$('.nic_pic').attr('src',host+data.faceImageUrl);
                                	
                                }
                                else
                                {
                                	$('.nic_pic').attr('src','./images/manager_03.png');
                                }
                              
                                $('.manager_name').text(data.custName);//用户名
                                document.title = '民信（'+data.custName+'）为您服务';
                                $('.manager_tel').text(tel);//手机号
                                $('.manager_text').text(data.selfIntroduction);//自我介绍
                                $('.satisfaction').text(data.cusDegree);//客户满意度
                                $('.res_speed').text(data.serviceSpeed);//响应速度
                                $('.service_num').text(data.serviceNumber);//服务人数
                                $('.mana_detail').text(data.managerdes);//经理详情
                            }
                            else
                            {
                                tip_window(data.msg,'确定');
                            }
                        },
                        error:function(data){
                            tip_window('请求超时，请稍后重试','确定');
                        }
                    })
//              }else{
//                  tip_window('您还未登录','去登录','login.html');
//              }
            }
            
	    </script>
