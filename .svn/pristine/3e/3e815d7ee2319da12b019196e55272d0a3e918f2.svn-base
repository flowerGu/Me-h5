body{background-color:#eee;}
.header{padding:15px 4% 10px;border-bottom:1px solid #dbdbdb;}

/*关于我们*/
.about_con{padding:5px 4% 10px;margin-bottom:10px;}
img.logo_ico{display:block;width:21%;margin:0 auto 15px;}
p{font-size:1.6em;}
.broad_tip{text-align:center;margin-bottom:20px;}
.p_text{margin-bottom:15px;}
.about_footer{text-align: center;color:#bdbdbd}
.about_footer p:nth-of-type(1){margin-bottom:10px;}

img.dis{display:block;margin:0 auto 15px;}
/*意见反馈*/
.form_area{background-color:#fff;border-bottom:1px solid #dbdbdb;padding:10px 4% 40px;margin-bottom:20px;}
textarea{width:100%;height:70px;border: none;outline: none;color:#bdbdbd;font-size:1.6em;}
.cust_tel{margin-top:20px;padding:0 4%;}
.cust_tel a{display:block;width:100%;height:40px;line-height:40px;background-color:#fff;border:1px solid #dbdbdb;border-radius:5px;text-align:center;font-size:1.7em;color:#4a4a4a;}

/*常见问题*/
.h5_que{padding:10px 4%;font-weight: normal;}
.h5_que,.que_list a{font-size:1.7em;color:#3a3a3a;}
.que_list{padding-left:4%;margin-bottom:10px;}
.que_list a{position:relative;display:block;padding:15px 0}
.que_list a i{position:absolute;right:4%;top:18px;width:14px;height:20px;background:url(../images/ico.png) no-repeat -81px -160px;}

.p_hotline{font-size:2em;text-align: center;color:#999999}
.p_hotline a{color:#e4003f}