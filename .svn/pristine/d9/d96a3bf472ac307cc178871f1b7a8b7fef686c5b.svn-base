*{box-sizing:border-box}
body{background-color:#fff;position:relative;}
.share_a{position:absolute;right:4%;bottom:12px;color:#0392ee;font-size:0.8em;}
.header{padding:10px 4% 10px;}
.pic{width:100%;}
.share_wrap{position:absolute;left:0;bottom:0;width:100%;height:200px;background: #005599;}
.zhezhao{display:none;position:fixed;left:0;top:0;z-index:2;width:100%;height:100%;background:#000;opacity: .5;filter:Alpha(opacity=50)}
.arrows{display:none;position:fixed;right:10px;top:20px;z-index:3;}
.arrows img{display:block;}
.tip_share{display:none;position:fixed;left:0;top:190px;width:100%;font-size:2em;font-weight:bold;color:#fff;z-index:222;text-align: center;}