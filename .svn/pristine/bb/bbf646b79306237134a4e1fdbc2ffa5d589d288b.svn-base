//江西开户弹框  --我的页面

@import 'base/variables';
.modal-jx-open{
  text-align: center;
  padding: 30/75rem;
  >h2{
    font-size: 16px;
    font-weight: normal;
    color: #3a3a3a;
  }
  >button{
    font-size: 12px;
    color: #fff;
    margin-top: 30/75rem;
    margin-bottom: 30/75rem;

    &:active,
    &:focus,
    &:disables{
      color:#fff;
      outline: none;
      background-image: none;
    }
  }
  >p{
    color: @gray1;
    >a{
      color: #fe3557;
    }
  }
}
[data-dpr="2"] .modal-jx-open{
  >h2{
    font-size: 32px;
  }
  >button{
    font-size: 24px;
    color: #fff;
  }
}
[data-dpr="3"] .modal-jx-open{
  >h2{
    font-size: 48px;
  }
  >button{
    font-size: 36px;
    color: #fff;
  }
}

.custom-checkbox{
  display: inline-block;
  width: 25/75rem;
  height: 25/75rem;
  background-color: #e9e9e9;
  border-radius: 5/75rem;
  &:before{
    content:' ';
  }
  &.active{
    &:before{
      content:'√';
    }
    color: #fe3557;
  }
}

