body{background-color:#eee;}
input{border:none;}
.header{padding:10px 4% 10px;border-bottom:1px solid #dbdbdb;}
.mgt2{margin-bottom:10px;}
.intent_search{width:100%;height:4em;position:relative;padding:.2em 4%;margin-bottom:20px;}
.intent_search img{position:absolute;left:6%;z-index:22;top:1em;}
.intent_input{width:100%;height:100%;padding-left:35px;/*background:url(../images/search.png) no-repeat left center;*/font-size:1.5em;/*background-size:35px 32px;*/}
ul{margin:0 2%;border:1px solid #e4e4e4;border-bottom:none;padding:.2em 2%;}
li{padding:.4em 2%;float:left;color:#b1b1b1;font-size:1.2em;}
ul li:nth-of-type(1) span{margin-left:.5em;}
ul li:nth-of-type(1) p:nth-of-type(2){margin-top:.2em;}
ul li:nth-of-type(2){float:right;margin-top:.5em; padding-top:.5em;background-color:rgb(237,237,237);color:#ff4c4c;text-align: center;}
ul li:nth-of-type(2) span{display:block;}
li p i{display:inline-block;font-style: normal;color:#fff;padding:.3em .5em;border-radius:.5em;}
.custName{font-size:1.2em;color:#171717;font-weight:500;}
.custTel{color:#666666;}
li p i.sexg{background-color:#00a5e7}
li p i.sexb{background-color:#ff4c4c}
/*details*/
.detail_con{padding:0 0 0 4%;margin-bottom:10px}
.detail_list{position:relative;height:3em;line-height:3em;font-size:1.5em;}
.detail_list label{display:inline-block;width:6em;height:100%;}
.detail_list label i{font-style: normal;color:#ec5648;font-weight: bold;font-size:1.1em;}
.detail_list label img{vertical-align: middle;}
.detail_list input{height:2em;font-size:1em;margin-left:.2em;}
.detail_list span{position:absolute;right:4%;color:#747474;}
#intentSearch{position:absolute;right:3%;top:.5em;display:block;font-size:1.6em;background-color:#ff4c4c;padding:.3em 1em;color:#fff;border-radius:5px;}
